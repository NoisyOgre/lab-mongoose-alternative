<h1>Edit Movie</h1>
<form method="POST" action="/movie/{{movie.id}}/edit">
    <label>Title</label>
    <input type="text" name="title" value="{{movie.title}}" />
     <label>Genre</label>
    <input type="text" name="genre" value="{{movie.genre}}" />
     <label>Plot</label>
    <input type="text" name="plot" value="{{movie.plot}}" />
    <label>Cast</label>
    <select name="cast">
        <option value="0">select an Celebrity</option>
        {{#each cast}}
        {{#eq name ../movie.cast.0.name}}
        <option value={{id}} selected>{{name}}</option>
        {{else}}
        <option value={{id}}>{{name}}</option>
        {{/eq}}
        {{/each}}
    </select>

    <button type="submit">Update</button>
</form>