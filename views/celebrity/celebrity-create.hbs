<h1>Create a Book</h1>


<!-- The method is post because we are creating a book-->
<form method="POST" action="/create-celebrity">
    <label>Name</label>
    <input type="text" name="name" />
    <label>Occupation</label>
    <input type="text" name="occupation"/>
    <label>Catch Phrase</label>
    <textarea rows="5" cols="20" name="catchPhrase"></textarea>
    <button type="submit">Create</button>
</form>